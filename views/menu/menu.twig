<link type="text/css" rel="stylesheet" href="css/menu/menu.css" />

<div id="dvMainSearch">
	<input type="text" id="dvMenuTxtPesquisa" size="20" maxlength="50" placeholder="PESQUISAR" value="" onkeyup="filterFunction()" />
	<div class="dropdown">
		<div id="contentDropdown" class="dropdown-content">
			<select id="dvMenuSel" size="12" style="width:300px">
			{% for op in menu %}
				<option value="{{ op.url }}|{{ op.method }}|{{ op.target }}">{{ op.nome }}</option>
			{% endfor %}
			</select>
		</div>
	</div>
</div>

<script type="text/javascript" src="js/menu/menu.js"></script>